# RAG Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Telegram Bot Configuration  
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# =============================================================================
# OPTIONAL SETTINGS (with sensible defaults)
# =============================================================================

# OpenAI Model Settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=["pdf", "docx", "txt"]
UPLOAD_DIR=uploads

# Database Configuration
DATABASE_URL=sqlite:///./rag_bot.db
DATABASE_ECHO=false

# Security Settings
SECRET_KEY=your-secret-key-for-jwt-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
DEFAULT_RATE_LIMIT=10/minute
UPLOAD_RATE_LIMIT=5/hour
QUERY_RATE_LIMIT=20/minute

# Application Settings
APP_TITLE=RAG Telegram Bot
APP_VERSION=1.0.0
APP_DESCRIPTION=A modern RAG system with Telegram bot interface
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Vector Database Settings
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=rag_documents

# Telegram Bot Settings
BOT_DESCRIPTION="Интеллектуальный бот для работы с документами через RAG"
BOT_SHORT_DESCRIPTION="RAG бот для обработки документов"

# Performance Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Feature Flags
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
ENABLE_FILE_VALIDATION=true
ENABLE_CONTENT_FILTERING=true